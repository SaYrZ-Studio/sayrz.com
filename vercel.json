{
  "version": 2,
  "builds": [
    { "src": "webroot/**/*", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/scripts/(.*)", "dest": "/scripts/$1", "headers": { "Cache-Control": "no-cache" } },
    { "src": "/(.*)", "dest": "/webroot/$1" }
  ]
}
